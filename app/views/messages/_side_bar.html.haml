.side-bar
  .side-bar__user-name
    .side-bar__user-name__box
      %h3.current-user
        = current_user.name
      %ul.search-icon
        %li.list
          = link_to new_group_path do
            = icon('fas', 'pen-square',class: 'icon')
        %li.list
          = link_to edit_user_path(current_user) do
            = icon('fa', 'cog',class: 'icon')
  .side-bar__groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            = group.show_last_message
